{
    "compilerOptions": {
      "target": "es2022",
      "module": "commonjs",
      "moduleResolution": "node",
      "declaration": true,
      "strict": true,
      "isolatedModules": true,
      "incremental": true,
      "esModuleInterop": true, // ES 모듈과 CommonJS 간 호환성 활성화
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "rootDir": ".",
      "outDir": "./dist",
      "composite": true
    }
  }
  